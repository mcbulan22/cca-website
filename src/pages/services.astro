---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Request Assessment for Your Cadets",
    subTitle:
      "Need a custom-designed assessment tailored for your cadets’ training outcomes? We specialize in creating formative and summative assessments aligned with maritime standards. Whether written, practical, or simulation-based, you can request support directly from CCA to ensure your cadets are evaluated accurately and fairly.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Assessment design plans and documents",
    imgTwo: personWorking,
    imgTwoAlt: "Assessor working at desk with documents",
    btnExists: true,
    btnTitle: "Request an Assessment",
    btnURL: "#request-form",
  },
  {
    isRightSection: false,
    title: "MAAP-SEAS Account Management",
    subTitle:
      "If you need assistance with your MAAP-SEAS (Moodle) account — be it creating new access for cadets, resetting passwords, or updating course enrollments — our team is here to help. This service ensures seamless participation in online assessments and coursework hosted on our learning platform.",
    img: beforeAfter,
    imgAlt: "User interface showing Moodle dashboard",
    btnExists: true,
    btnTitle: "Manage Accounts",
    btnURL: "#account-support",
  },
  {
    isRightSection: true,
    title: "Request Answer Sheets and Scoring Data",
    subTitle:
      "Faculty members may request access to student submissions and answer sheets for both written and digital assessments. Our team provides secure, trackable delivery of these materials to support your grading and feedback process. Ensure transparency and efficiency in performance reviews.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Teacher reviewing answer sheets",
    imgTwo: aerialView,
    imgTwoAlt: "Student writing during assessment",
    btnExists: true,
    btnTitle: "Access Answer Sheets",
    btnURL: "#answer-sheets",
  },
  {
    isRightSection: false,
    title: "Digital Marking Sheets for Practical Assessments",
    subTitle:
      "We now deliver secure, digital marking sheets via Tally.so for practical assessments. Faculty receive results through email, while access to the form is password-protected to ensure integrity. For password inquiries, kindly coordinate with the course’s assigned assessor.",
    img: usingTools,
    imgAlt: "Digital form interface for practical scoring",
    btnExists: true,
    btnTitle: "Use Marking Sheet",
    btnURL: "#marking-sheets",
  },
  {
    isRightSection: true,
    title: "Contact Your Course Assessor",
    subTitle:
      "Need to follow up on a request or coordinate directly with an assessor? You may send an email or chat with the assigned assessor to clarify procedures, request passwords for marking sheets, or align on course-specific updates. We encourage open communication to ensure successful outcomes.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "Person typing an email on laptop",
    imgTwo: underConstruction,
    imgTwoAlt: "Assessor talking with faculty via chat",
    btnExists: true,
    btnTitle: "Contact Assessor",
    btnURL: "#contact-assessor",
  },
];


const pageTitle: string = `Services | ${SITE.title}`;
const metaDescription =
  "Uniting expertise with your vision, ScrewFast provides exceptional service and comprehensive solutions in the hardware and construction industry, from consultation to project completion.";
const ogTitle = "Expert Consultation Services | ScrewFast";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/services",
    url: "https://screwfast.uk/services",
    name: "Expert Consultation Services | ScrewFast",
    description:
      "Uniting expertise with your vision, ScrewFast provides exceptional service and comprehensive solutions in the hardware and construction industry, from consultation to project completion.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://screwfast.uk",
      name: "ScrewFast",
      description:
        "ScrewFast offers top-tier hardware tools and expert construction services to meet all your project needs.",
    },
    inLanguage: "en-US",
  }}
>
  {/* MainSection is the introductory section of the page, it also contains a CTA button */}
  <MainSection
    title="Your Partner in Maritime Assessment and Support"
    subTitle="At the Center for Competency Assessment (CCA), we are committed to supporting maritime faculty and institutions in delivering world-class assessments. From designing customized evaluations for cadets to managing accounts on MAAP-SEAS, we provide efficient, secure, and faculty-friendly services. Our team also facilitates digital access to practical assessment results, including secure, password-protected marking sheets and score delivery via email. Ready to request an assessment for your cadets or access related services? Use the button below to get started."
    btnExists={true}
    btnTitle="Request an Assessment"
    btnURL="#"
  />
  {/* RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  */}
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  {/* FeaturesStats section showcases essential stats valuable to users */}
  <FeaturesStats
    title="By the Numbers"
    subTitle="Our commitment to quality and reliability is evident in every project we undertake. At ScrewFast, we are dedicated to delivering industry-leading services that ensure your construction projects are built to last."
    mainStatTitle="96%"
    mainStatSubTitle="of our clients rate their experience with ScrewFast as exceptional"
    stats={[
      {
        stat: "99.8%",
        description: "project completion rate",
      },
      {
        stat: "5,000+",
        description: "successful installations",
      },
      {
        stat: "85%",
        description: "client growth year-over-year",
      },
    ]}
  />
</MainLayout>
